<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rainforest"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".WalletActivity"
    android:gravity="center">


    <ImageButton
        android:id="@+id/imageButtonFrog"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/frogcoin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageButton
            android:id="@+id/imageButtonTurtle"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:adjustViewBounds="true"
            android:background="@null"
            android:padding="5dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="50dp"
            android:src="@drawable/turtlecoin" />

        <ImageButton
            android:id="@+id/imageButtonLizard"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_marginLeft="50dp"
            android:src="@drawable/lizardcoin" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/imageButtonCrocodile"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:adjustViewBounds="true"
        android:background="@null"
        android:padding="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/crocodilecoin" />

</LinearLayout>